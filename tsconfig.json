{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*",
        "src/config/*.json"
    ],
    "exclude": [
        "node_modules",
        "types",
        "**/*.spec.ts",
        "dist",
        ".vscode"
    ]
}